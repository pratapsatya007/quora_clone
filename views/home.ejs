    <title>Document</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body style="position:relative">
    <header>
      <div id="logo"></div>
      <nav id="nav-bar">
        <div id="home"></div>
        <div id="following"></div>
        <div id="answer"></div>
        <div id="spaces"></div>
        <div id="notifications" onclick="render()"></div>
      </nav>
      <div id="search">
        <div id="search-logo" for="search-bar"></div>
        <input
          type="search"
          name="search"
          id="search-bar"
          size="30"
          placeholder="search Quora"
        />
      </div>
      <div id="profile"></div>
      <div id="languages"></div>
