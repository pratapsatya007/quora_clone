        c.style.backgroundColor = "rgb(234, 176, 176)";
        c.style.color = " rgb(207, 60, 60)";
        c.style.fontWeight = "700";
        p.style.backgroundColor = "white";
        p.style.color = " rgb(55, 51, 51)";
      }
